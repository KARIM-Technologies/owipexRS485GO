{
  "id": "turbidity_sensor_01",
  "name": "Generischer Trübungssensor",
  "type": "turbidity_sensor",
  "manufacturer": "Generic",
  "model": "TURB-500",
  "protocol": "modbus",
  "enabled": true,
  "metadata": {
    "description": "Standardmäßiger Trübungssensor für Wasseraufbereitung",
    "location": "Filteranlage 1"
  },
  "modbus": {
    "slave_id": 4,
    "port": "/dev/ttyUSB0",
    "baud_rate": 9600,
    "data_bits": 8,
    "stop_bits": 1,
    "parity": "N",
    "timeout": 1000,
    "register_maps": {
      "turbidity": {
        "name": "turbidity",
        "type": "HOLDING",
        "address": 1,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "temperature": {
        "name": "temperature",
        "type": "HOLDING",
        "address": 3,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      }
    }
  },
  "calibration": {
    "offset": 0.0,
    "scale": 1.0
  }
} 