{
  "id": "ph_sensor_01",
  "name": "Generischer pH-Sensor",
  "type": "ph_sensor",
  "manufacturer": "Generic",
  "model": "PH-2000",
  "protocol": "modbus",
  "enabled": true,
  "metadata": {
    "description": "Standardmäßiger pH-Sensor für Wasseraufbereitung",
    "location": "Filteranlage 1"
  },
  "modbus": {
    "slave_id": 1,
    "port": "/dev/ttyUSB0",
    "baud_rate": 9600,
    "data_bits": 8,
    "stop_bits": 1,
    "parity": "N",
    "timeout": 1000,
    "register_maps": {
      "ph_value": {
        "name": "ph_value",
        "type": "HOLDING",
        "address": 100,
        "length": 2,
        "data_type": "float32",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "temperature": {
        "name": "temperature",
        "type": "HOLDING",
        "address": 102,
        "length": 2,
        "data_type": "float32",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "calibration": {
        "name": "calibration",
        "type": "HOLDING",
        "address": 104,
        "length": 2,
        "data_type": "float32",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      }
    }
  },
  "calibration": {
    "offset": 0.0,
    "scale": 1.0
  }
} 