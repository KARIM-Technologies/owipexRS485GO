{
  "id": "flow_sensor_01",
  "name": "Generischer Durchflusssensor",
  "type": "flow_sensor",
  "manufacturer": "Generic",
  "model": "FLOW-1000",
  "protocol": "modbus",
  "enabled": true,
  "metadata": {
    "description": "Standardmäßiger Durchflusssensor für Wasseraufbereitung",
    "location": "Filteranlage 1"
  },
  "modbus": {
    "slave_id": 2,
    "port": "/dev/ttyUSB0",
    "baud_rate": 9600,
    "data_bits": 8,
    "stop_bits": 1,
    "parity": "N",
    "timeout": 1000,
    "register_maps": {
      "flow_rate": {
        "name": "flow_rate",
        "type": "HOLDING",
        "address": 1,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "total_flow_low": {
        "name": "total_flow_low",
        "type": "HOLDING",
        "address": 10,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "total_flow_high": {
        "name": "total_flow_high",
        "type": "HOLDING",
        "address": 17,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "flow_unit": {
        "name": "flow_unit",
        "type": "HOLDING",
        "address": 5176,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      },
      "flow_decimal_point": {
        "name": "flow_decimal_point",
        "type": "HOLDING",
        "address": 5177,
        "length": 1,
        "data_type": "uint16",
        "byte_order": "big_endian",
        "multiplier": 1.0,
        "offset": 0.0
      }
    }
  },
  "calibration": {
    "offset": 0.0,
    "scale": 1.0
  }
} 